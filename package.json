{
  "name": "@dnb-hugo/stylelint-config",
  "description": "Stylelint configuration used in dnb-hugo projects.",
  "version": "2.0.6",
  "author": "Patrick Kollitsch <patrick@davids-neighbour.com> (https://davids-neighbour.com)",
  "bugs": {
    "url": "https://github.com/dnb-hugo/stylelint-config/issues"
  },
  "commitlint": {
    "extends": [
      "@dnb-hugo/commitlint-config"
    ]
  },
  "dependencies": {
    "stylelint": "13.11.0",
    "stylelint-config-sass-guidelines": "8.0.0",
    "stylelint-order": "4.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "12.0.0",
    "@commitlint/config-conventional": "12.0.0",
    "@dnb-hugo/browserslist-config": "github:dnb-hugo/browserslist-config",
    "@dnb-hugo/commitlint-config": "github:dnb-hugo/commitlint-config",
    "@dnb-hugo/eslint-config": "github:dnb-hugo/commitlint-config",
    "@dnb-hugo/remark-preset-lint": "github:dnb-hugo/remark-preset-lint",
    "@dnb-hugo/standard-version-config": "github:dnb-hugo/standard-version-config",
    "@dnb-hugo/textlint-config": "github:dnb-hugo/textlint-config",
    "commitizen": "4.2.3",
    "cz-conventional-changelog": "3.3.0",
    "cz-customizable": "6.3.0",
    "cz-customizable-ghooks": "2.0.0",
    "eslint": "7.20.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.3.1",
    "prettier": "2.2.1",
    "standard-version": "9.1.1"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6"
  },
  "homepage": "https://github.com/dnb-hugo/stylelint-config#readme",
  "keywords": [
    "stylelint",
    "stylelint-config"
  ],
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dnb-hugo/stylelint-config.git"
  },
  "scripts": {
    "commitlint": "commitlint --from=HEAD~1",
    "lint": "eslint .",
    "release": "standard-version --release-as patch -a -t \"\" && ./bin/release-hook-postrelease.sh",
    "release-major": "standard-version --release-as major -a -t \"\" && ./bin/release-hook-postrelease.sh",
    "release-next": "standard-version --release-as minor -a -t \"\" && ./bin/release-hook-postrelease.sh",
    "textlint": "textlint",
    "textlint-fix": "textlint --fix"
  }
}
