{
  "name": "stylelint-config-dnb",
  "version": "1.1.4",
  "description": "Stylelint configuration used for all DNB projects",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dnb-hugo/stylelint-config-dnb.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dnb-hugo/stylelint-config-dnb/issues"
  },
  "homepage": "https://github.com/dnb-hugo/stylelint-config-dnb#readme",
  "files": [
    "index.js"
  ],
  "engines": {
    "node": ">=10"
  },
  "peerDependencies": {
    "stylelint": "^10.1.0 || ^11.0.0 || ^12.0.0 || ^13.0.0"
  },
  "dependencies": {
    "stylelint-config-recommended-scss": "4.2.0",
    "stylelint-config-standard": "20.0.0",
    "stylelint-scss": "3.18.0"
  },
  "devDependencies": {
    "stylelint": "13.8.0",
    "standard-version": "9.0.0",
    "husky": "4.3.0",
    "commitizen": "4.2.2",
    "cz-conventional-changelog": "3.3.0",
    "cz-customizable": "6.3.0",
    "cz-customizable-ghooks": "2.0.0",
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0"
  },
  "scripts": {
    "commitlint": "commitlint --from=HEAD~1",
    "release": "standard-version --release-as patch -a -t \"v\" && git push --follow-tags origin main",
    "release-next": "standard-version --release-as minor -a -t \"v\" && git push --follow-tags origin main",
    "release-major": "standard-version --release-as major -a -t \"v\" && git push --follow-tags origin main"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "standard-version": {
    "skip": {
      "changelog": true
    },
    "bumpFiles": [
      {
        "filename": "package.json",
        "type": "json"
      }
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0,
        "always",
        100
      ],
      "type-enum": [
        0,
        "always",
        [
          "feat",
          "fix",
          "layouts",
          "refactor",
          "test",
          "chore",
          "wip",
          "content"
        ]
      ]
    }
  }
}
